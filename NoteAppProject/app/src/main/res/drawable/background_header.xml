<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FF4081" /> <!-- Cambia el color de fondo a uno que te guste -->
    <corners android:radius="0dp" /> <!-- Ajusta el radio de las esquinas para el borde -->
    <padding
        android:left="16dp"
    android:right="16dp"
    android:top="8dp"
    android:bottom="8dp" />
    <gradient
        android:angle="0"
    android:startColor="#FF4081"
    android:endColor="#FF0000"
    android:type="linear" />
    <stroke
        android:color="#000000"
    android:width="2dp" />
</shape>

